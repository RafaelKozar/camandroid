<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

    android:layout_marginBottom="@dimen/dimen_padrao"
    android:layout_marginTop="@dimen/dimen_padrao"
    android:id="@+id/layout_mensagem_adm"

    android:background="@color/color_msg_server"
    android:layout_width="match_parent" android:layout_height="wrap_content">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/margin_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_mensagem_data_adm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_padrao"
            android:textColor="@color/preto"
            android:textSize="@dimen/letra_data" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/preto"
            android:layout_marginLeft="@dimen/dimen_padrao"
            android:textSize="@dimen/letra_data"
            android:id="@+id/text_estacionamento"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/letra_mensagem"
            android:layout_gravity="right"
            android:textColor="@color/preto"
            android:layout_marginLeft="@dimen/dimen_padrao"
            android:id="@+id/text_mensagem_server"
            />


    </LinearLayout>


